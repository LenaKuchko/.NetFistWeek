@model CandyStore.Models.Product
@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Create Product</h2>
<hr />
<h4>Add a new Product</h4>
@using (Html.BeginForm())
{
    <p>
        @Html.LabelFor(model => model.Title)
        @Html.TextBoxFor(model => model.Title)
    </p>
    <p>
        @Html.LabelFor(model => model.Size)
        @Html.TextBoxFor(model => model.Size)
        
         @*<select id="Size">
            <option value="Small">Small</option>
            <option value="Meduim">Meduim</option>
            <option value="Large">Large</option>
        </select>*@
    </p>

    <p>
        @Html.Label("Producer")
        @Html.DropDownList("ProducerId")
    </p>

    <p>
        @Html.LabelFor(model => model.Description)
        @Html.TextBoxFor(model => model.Description)
    </p>

    <p>
        @Html.LabelFor(model => model.Cost)
        @Html.TextBoxFor(model => model.Cost)
    </p>
    <p>
        @Html.LabelFor(model => model.Image)
        @Html.TextBoxFor(model => model.Image, new { @placeholder = "enter url"})
    </p>

    <input type="submit" value="Add a new product" />
}
<p>@Html.ActionLink("Back to products", "Index")</p>